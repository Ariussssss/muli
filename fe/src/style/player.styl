.player
  position absolute
  justify-content center
  align-items center
  display flex
  width 100%
  height 100%
  z-index 2
  video
    max-width 800px
    max-height 600px
  &__container
    position relative
    display flex
    width 100%
    flex-direction column
    align-items center

.waveform
  position absolute
  right 0
  display flex
  justify-content center
  height 30vh
  width 100%
  gap 2px
  z-index 1
  &.top
    top 0
    align-items flex-start
    & .wave-bar
      background linear-gradient(to bottom, 0% #4b6cb7, 30% #182848)
  &.bottom
    bottom 0
    align-items flex-end
    & .wave-bar
      background linear-gradient(to top, 0% #4b6cb7, 30% #182848)


.wave-bar
  flex 1
  min-height 1px
  transition height 0.1s ease-out

button
  padding 10px 20px
  background #4b6cb7
  color white
  border none
  border-radius 5px
  cursor pointer
  font-size 16px
  transition background 0.2s

  &hover
    background #3a5a9c
