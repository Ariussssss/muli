.player
  position absolute
  justify-content center
  align-items center
  display flex
  width 100%
  height 100%
  z-index 2
  .video
    position absolute
    display flex
    width 800px
    height 600px
    justify-content center
    align-items center
    & video
      max-width 100%
      max-height 100%
  &__container
    position relative
    display flex
    width 100%
    flex-direction column
    align-items center
   &__bg
     position absolute
     width 100vw
     height 100vh
     z-index 0
     & canvas
       width 100%
       height 100%
       
     &--glass
       position absolute
       top 0
       width 100%
       height 100%
       background-color: rgba(36, 36, 36, 0.8);
       backdrop-filter: blur(10px);
.waveform
  position absolute
  right 0
  display flex
  justify-content center
  height 30vh
  width 100%
  gap 2px
  z-index 1
  &.top
    top 0
    align-items flex-start
    & .wave-bar
      background linear-gradient(to bottom, 0% #4b6cb7, 30% #182848)
  &.bottom
    bottom 0
    align-items flex-end
    & .wave-bar
      background linear-gradient(to top, 0% #4b6cb7, 30% #182848)

      

.wave-bar
  flex 1
  min-height 1px
  transition height 0.1s ease-out
.progress
  position absolute
  bottom -6px
  cursor pointer

@media (max-width: 2200px)
  .player
    align-items flex-start
    padding-top 40px
@media (max-width: 601px)
  .player
    & .video
      max-width 100vw
      max-height 40vh
